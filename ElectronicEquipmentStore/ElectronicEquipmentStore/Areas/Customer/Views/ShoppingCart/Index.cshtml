@model ElectronicEquipmentStore.Models.ViewModel.ShoppingCartViewModel
@{
    ViewData["Title"] = "Index";
}

<form method="post">
    <br /><br />
    <h2 class="text-info">Giỏ hàng của bạn</h2>
    <br />
    @if(Model.Products.Count>0)
    {
        <div class="container border border-secondary rounded" style="padding:15px;">
            <div class="row">
                <div class="col-8" style="border-right:1px solid #bbb9b9">
                    <table class="table table-striped" width="100%">
                        <tr class="table-info">
                            <th style="text-align:center;width:20%"></th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.Products.FirstOrDefault().tenSP"></label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.Products.FirstOrDefault().giaGoc"></label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.Products.FirstOrDefault().giaKhuyenMai"></label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.Products.FirstOrDefault().ProductGroup.tenNSP"></label>
                            </th>
                            <th style="text-align:center;width:20%"></th>
                        </tr>
                        @foreach(var item in Model.Products)
                        {
                    <tr style="padding:50px;">
                        <td>
                            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.maSP">
                                <img src="@item.hinhAnh" width="100%" style="margin:auto;display:block; border-radius:5px;border:1px solid #bbb9b9;" />
                            </a>
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(c=>item.tenSP)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(c => item.giaGoc)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(c => item.giaKhuyenMai)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(c => item.ProductGroup.tenNSP)
                        </td>
                        <td style="text-align:center">
                            <button type="submit" class="btn btn-danger" asp-action="remove" asp-route-id="@item.maSP"> <i class="fas fa-trash-alt"></i></button>
                           
                        </td>
                    </tr>
                        }
                    </table>
                </div>
                <div class="col-4" style="padding-left:30px">
                    <div class="row">
                        <div class="col-12">
                            <label>Khách hàng : </label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Receipt.tenKH" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label>Số điện thoại : </label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Receipt.sdtKH" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label>Email : </label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Receipt.emailKH" class="form-control" />
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-success">Thanh toán</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div>Bạn chưa chọn mặt hàng nào ...</div>
    }
</form>

@section Scripts{ 

}

