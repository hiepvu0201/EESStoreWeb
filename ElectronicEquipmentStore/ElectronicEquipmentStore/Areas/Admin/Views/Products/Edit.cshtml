@model ElectronicEquipmentStore.Models.ViewModel.ProductViewModel
@using ElectronicEquipmentStore.Extensions
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input type="hidden" asp-for="Product.maSP" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.tenSP" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.tenSP" class="form-control" />
                </div>
                <span asp-validation-for="Product.tenSP" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.hinhAnh"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.soLuongSP" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.soLuongSP" class="form-control" />
                </div>
                <span asp-validation-for="Product.soLuongSP" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.giaKhuyenMai" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.giaKhuyenMai" class="form-control" />
                </div>
                <span asp-validation-for="Product.giaKhuyenMai" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.giaGoc" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.giaGoc" class="form-control" />
                </div>
                <span asp-validation-for="Product.giaGoc" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.trangThai" class="control-label"></label>
                </div>
                <div class="col-8">
                    @*<input asp-for="Product.trangThai" class="form-control" />*@
                    <select asp-for="Product.trangThai" class="form-control">
                        <option>còn hàng</option>
                        <option>hết hàng</option>
                    </select>
                </div>
                <span asp-validation-for="Product.trangThai" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.maNSX" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.maNSX" class="form-control" />
                </div>
                <span asp-validation-for="Product.maNSX" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductGroups"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Product.maNSP" asp-items="Model.ProductGroups.ToSelectListItemProductGroup(Model.Product.maNSP)" class="form-control"></select>
                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Product.hinhAnh" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
        </div>

    </div>
    
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to list</a>
    </div>
</form>