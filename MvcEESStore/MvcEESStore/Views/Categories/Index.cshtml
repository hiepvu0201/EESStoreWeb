@model IEnumerable<MvcEESStore.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<p>
    <br />
    <div class="row">
        <div class=" col-6">
            <h2 class="text-info">Summary</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-info">&nbsp; New Category</a>
        </div>
    </div>
    <br />
</p>

<form asp-controller="Categories" asp-action="Index">
    <p> 
    Tìm danh mục: <input type="text" name="SearchString">
        <input type="submit" value="Tìm kiếm" />   
    </p> 
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tenDM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tongSoLuongSP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tenDM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tongSoLuongSP)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.maDM">Edit</a>
                    <a asp-action="Details" class=" btn btn-info" asp-route-id="@item.maDM">Details</a>
                    <a asp-action="Delete" class=" btn btn-danger" asp-route-id="@item.maDM">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
