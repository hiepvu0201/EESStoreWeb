@model IEnumerable<MvcEESStore.Models.PurchaseHistory>

@{
    ViewData["Title"] = "Purchase Histories";
}

    <h1>Purchase Histories</h1>

    <p>
        <br />
        <div class="row">
            <div class=" col-6">
                <h2 class="text-info">Summary</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Create" class="btn btn-info">  &nbsp; New Purchase History</a>
            </div>
        </div>
        <br />
    </p>

    <form asp-controller="PurchaseHistories" asp-action="Index">
        <p>
            Tìm kiếm lịch sử mua hàng: <input type="text" name="SearchString">
            <input type="submit" value="Tìm kiếm" />
        </p>
    </form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.maHD)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.maHD)
            </td>
            <td>
                <a asp-action="Edit" class=" btn btn-primary" asp-route-id="@item.maPurchaseHistory">Edit</a>
                <a asp-action="Details" class=" btn btn-info" asp-route-id="@item.maPurchaseHistory">Details</a>
                <a asp-action="Delete" class=" btn btn-danger" asp-route-id="@item.maPurchaseHistory">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
